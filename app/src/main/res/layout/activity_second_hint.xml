<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/qviz">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Here is the Hint"
        android:textSize="25dp"
        android:textColor="@color/yellow"
        android:layout_marginTop="110dp"></TextView>
    <ImageView
        android:id="@+id/square"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/javakotlin" />
    <TextView
        android:layout_width="160dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow"
        android:text="@string/lien"
        android:id="@+id/lien"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="Go back"
        android:id="@+id/backToAct3"
        android:layout_marginTop="20dp"
        ></Button>
</LinearLayout>